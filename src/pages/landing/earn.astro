---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Earning Hub',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Staking Platform"
    title="Crypto Staking"
    subtitle="Staking is earning rewards by putting your crypto to work on a blockchain network, helping it run smoothly and securely. It's a way to grow your crypto.)"
    actions={[
      
      { text: 'Exchange', href: '/buy' },
      { text: 'Earning', href: ' https://app.exsatbank.com?referral=t3b9hxd3xn', icon: 'tabler:coin' },
      { text: 'Staking', href: ' https://app.exsatbank.com?referral=t3b9hxd3xn', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Markets', href: '/buy' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1617854607064-18337ca0a680?q=80&w=2672&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Magnet attracting screws. Lead generation landing page demo',
    }}
  />

  <CallToAction
    title="Coming soon"
    subtitle="We are working on the content of these demo pages. You will see them very soon. Stay tuned Stay tuned!"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/arthelokyo/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
