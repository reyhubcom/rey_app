const metadata = {
  title: 'Earning Hub',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Staking Platform"
    title="Low Risk"
    subtitle="Discover the secrets to creating a Landing Page that turns curious visitors into eager leads. (Your Hero should grab attention instantly. Use a powerful headline that speaks directly to your target audience.)"
    actions={[
      { variant: 'primary', text: 'Earning', href: ' https://app.exsatbank.com?referral=t3b9hxd3xn', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Exchange', href: '/buy' },
      { text: 'Earning', href: ' https://app.exsatbank.com?referral=t3b9hxd3xn', icon: 'tabler:square-rounded-arrow-right' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1617854607064-18337ca0a680?q=80&w=2672&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Magnet attracting screws. Lead generation landing page demo',
    }}
  />

  <CallToAction
    title="Coming soon"
    subtitle="We are working on the content of these demo pages. You will see them very soon. Stay tuned Stay tuned!"
    actions={[
      {
        variant: 'primary',
